#include <string>
#include <vector>
#include <unordered_map>
#include< iostream>
#include<utility>
#include<algorithm>
#include <set>
using namespace std;

typedef struct my {
	int plays_sum;
	vector<pair<int, int>> list;
}my;

bool sortbysec(const pair<int, int> &a,
	const pair<int, int> &b)
{
	return (a.second > b.second);
}



vector<int> solution(vector<string> genres, vector<int> plays) {
	vector<int> answer;
	vector<int> plays_sum_vec;
	unordered_map<string, my> music_map;
	int index = 0;
	for (auto a : genres)
	{
		music_map[a].list.push_back(make_pair(index, plays[index]));
		index++;
	}
	for (auto a : music_map)
	{
		for (auto inner_a : a.second.list)
		{
			a.second.plays_sum += inner_a.second;
		}
		sort(a.second.list.begin(),a.second.list.end(), sortbysec);

		cout << a.second.plays_sum<<endl;
		plays_sum_vec.emplace_back(a.second.plays_sum);
	}
	sort(plays_sum_vec.begin(), plays_sum_vec.end());
	for (auto a : plays_sum_vec)
	{
		music_map.
	}
	

	
}

int main()
{
	vector<string> genres = { "classic","pop","classic","classic","pop" };
	vector<int> plays = { 500,600,150,800,2500 };
	solution(genres, plays);


}
